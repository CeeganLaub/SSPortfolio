<p id="notice"><%= notice %></p>

<h1>Transformations</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transformations.each do |transformation| %>
      <tr>
        <td><%= transformation.title %></td>
        <td><%= transformation.body %></td>
        <td><%= link_to 'Show', transformation %></td>
        <td><%= link_to 'Edit', edit_transformation_path(transformation) %></td>
        <td><%= link_to 'Destroy', transformation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transformation', new_transformation_path %>
